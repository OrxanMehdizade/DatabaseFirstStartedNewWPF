<Window x:Class="DatabaseFirstStartedNew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseFirstStartedNew"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="ListViewBooksCount" Height="370" VerticalAlignment="Bottom">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="ComboClass" HorizontalAlignment="Left" Margin="10,10,0,0"  VerticalAlignment="Top" Width="220" Height="30" SelectionChanged="ComboClass_SelectionChanged">
            <ComboBox.ToolTip>ComboClass</ComboBox.ToolTip>
        </ComboBox>
        <ComboBox x:Name="ComboColumns" HorizontalAlignment="Left" Margin="567,10,0,0" VerticalAlignment="Top" Width="220" Height="30">
            <ComboBox.ToolTip>ComboColumns</ComboBox.ToolTip>
        </ComboBox>


    </Grid>
</Window>
